{% include 'Partials/head.twig' %}
{% include 'Partials/navbar.twig' %}

<div style="padding: 20px;">
    <h2>Edit - {{ article.title }}</h2>
    <form method="post" action="/articles/{{ article.id }}">
        <div>
            <label for="title">Title: </label>
            <input id="title" type="text" name="title" value="{{ article.title }}" />
        </div>
        <div>
            <label for="description">Description: </label><br>
            <textarea id="description" name="description" rows="5" cols="15">{{ article.description }}</textarea>
        </div>
        <div>
            <label for="picture">Picture URL:</label>
            <input type="text" name="picture" value="{{ article.picture }}" placeholder="Enter picture URL">
            <br>
        </div>
        <button type="submit">Update Article</button>
    </form>
    <br>
</div>